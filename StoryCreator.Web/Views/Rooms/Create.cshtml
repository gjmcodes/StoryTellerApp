@model StoryCreator.Web.Models.Rooms.Create.CreateRoomVm

@{
    ViewData["Title"] = "Create";
}

<h2>Criar Room</h2>

<hr />
<div class="row">

    <div class="col-md-12">
        <div class="col-md-4">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomName" class="control-label"></label>
                <input asp-for="RoomName" class="form-control" />
                <span asp-validation-for="RoomName" class="text-danger"></span>
            </div>
        </div>

    </div>

    <div class="col-md-12" id="roomActions">
        @Html.Partial("_RoomActions", Model)
    </div>


    <div class="col-md-12" id="roomContents">
        @Html.Partial("_RoomContents", Model)
    </div>


</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/Rooms/CreateRoom.js"></script>
}
