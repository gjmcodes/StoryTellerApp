@model StoryCreator.Web.Models.Rooms.Create.CreateRoomVm

<h4>Criar Room Content</h4>
<hr />

<form id="createRoomContentForm" asp-action="_CreateRoomContent" onsubmit="return onSubmitContent(Event)">


    @for (int i = 0; i < Model.RoomContents.Count; i++)
    {
        <input hidden asp-for="@Model.RoomContents[i].Id" />
        <input hidden asp-for="@Model.RoomContents[i].RoomId" />

        foreach (var item in Model.RoomContents[i].CultureContent)
        {
            <input hidden asp-for="@Model.RoomContents[i].CultureContent[item.Key]" />
        }
    }

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <div class="col-md-12">
            @foreach (var item in Model.CreateRoomContent.CultureContent)
            {
                <div class="row">
                    <label class="control-label">@item.Key</label>
                    <textarea asp-for="CreateRoomContent.CultureContent[item.Key]" type="text" class="form-control"></textarea>
                </div>
            }
        </div>

        <div class="col-md-offset-12"></div>
    </div>



    <div class="form-group">
        <div class="col-md-12">
            <input type="button" id="submitContentBtn" value="Save" class="btn btn-primary" />
        </div>
    </div>
</form>

