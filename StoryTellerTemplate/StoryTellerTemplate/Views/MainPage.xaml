<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="StoryTellerTemplate.Views.MainPage"
             xmlns:cv="clr-namespace:Xamarin.Forms;assembly=Xamarin.Forms.CarouselView"
             Title="{Binding Title}"
             x:Name="Page">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackLayout
        Grid.Row="0"
        Grid.Column="1"
        VerticalOptions="FillAndExpand"
        HorizontalOptions="FillAndExpand">

            <Label Text="| | Título | |" 
               VerticalOptions="FillAndExpand"
               HorizontalOptions="FillAndExpand" />



        </StackLayout>

        <ScrollView
        x:Name="contentScrollView"
        Grid.Row="1"
        Grid.ColumnSpan="3"
        VerticalOptions="FillAndExpand"
        HorizontalOptions="FillAndExpand"
            VerticalScrollBarVisibility="Always"
            Padding="5, 0, 0, 0">

            <Label 
                x:Name="contentLbl" />


        </ScrollView>

        <Label Grid.Row="2" Grid.Column="0" Text="&lt;" />
        
        <cv:CarouselView 
            HorizontalOptions="FillAndExpand" 
            VerticalOptions="CenterAndExpand" 
            x:Name="gameActions"
            Grid.Row="2"
            Grid.Column="1"
            ItemsSource="{Binding Actions}">
            <cv:CarouselView.ItemTemplate>
                <DataTemplate>
                    <Button Text="{Binding Description}" 
                            FontSize="Micro" 
                            HorizontalOptions="FillAndExpand"  
                            VerticalOptions="Center"
                            Command="{Binding Source={x:Reference Page}, Path=BindingContext.ExecuteActionCommand}"
                            CommandParameter="{Binding .}"
                            />
                </DataTemplate>
            </cv:CarouselView.ItemTemplate>
        </cv:CarouselView>

        <Label Grid.Row="2" Grid.Column="2" Text=">" />

    </Grid>

</ContentPage>